<?xml version="1.0" encoding="UTF-8" ?>
<Configuration status="info" strict="true" name="XMLConfigTest">
    <Appenders>
        <Console name="ConsoleAppender" target="SYSTEM_OUT">
            <PatternLayout pattern="%yellow{%p} %d %green{%m} %n %l "/>
        </Console>
        <RollingFile name = "rollingFileSize"
        fileName="logs/log4j2.log"
        filePattern = "logs/$${date:yyyy-MM}/app-%d{MM-dd-yyyy}-%i.log.gz">
        <PatternLayout>
            <Pattern>
                %p %d{yyyy-MM-dd HH:mm:ss} %c{1.} %t %m %n %l
            </Pattern>
        </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval = "1"/>
                <SizeBasedTriggeringPolicy size = "5 KB"/>
            </Policies>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="ConsoleAppender"/>
            <AppenderRef ref="rollingFileSize"/>
        </Root>
    </Loggers>
</Configuration>